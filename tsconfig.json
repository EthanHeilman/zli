{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [
            "ES2020.Promise"
        ],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "files": ["src/index.ts"], // Mark index.ts as our entry point for packaged release
    "exclude": ["node_modules", "src/system-tests", "src/**/*.test.ts"]
}