{
    "compilerOptions": {
        "module": "es2022",
        "esModuleInterop": true,
        "lib": [
            "es6",
            "es2021"
        ],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "es2021",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        // "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "declaration": true,
        // "declarationMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "files": ["src/index.ts"], // Mark index.ts as our entry point for packaged release
    "exclude": ["node_modules"]
}